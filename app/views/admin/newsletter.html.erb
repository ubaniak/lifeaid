<div class="content">
    <h3>Manage Newsletters</h3>
    <%= link_to 'Add Newsletter', new_newsletter_path, :class => "btn btn-primary" %>
    <span>Create a new newsletter.</span>
    <ul class="admin_edit">
        <% @newsletters.each do |newsletter| %>
            <div class="row">
                <div class="span6">
                    <%= render newsletter %>
                </div>
                <div class="spani6">
                    <%= link_to 'Edit', edit_newsletter_path(newsletter) %> |
                    <%= link_to 'Delete', newsletter, method: :delete, data: { confirm: 'Are you sure?' } %>
                </div>
            </div>
        <% end %>
    </ul>
</div>
